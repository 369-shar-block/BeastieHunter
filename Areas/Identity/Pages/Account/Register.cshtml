@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout-2.cshtml";
}

<div class="seipkon-login-form-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-form-box">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h3 class="text-center fw-bold">Create a new account.</h3>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating m-2">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.FirstName"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating m-2">
                            <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.LastName"></label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-floating m-2">
                            <input asp-for="Input.CompanyName" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.CompanyName"></label>
                            <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                        </div>
                        <div class="form-floating m-2">
                            <input asp-for="Input.CompanyDescription" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.CompanyDescription"></label>
                            <span asp-validation-for="Input.CompanyDescription" class="text-danger"></span>
                        </div>
                        <div class="form-floating m-2">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating m-2">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating m-2">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                    <hr />
                    
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
